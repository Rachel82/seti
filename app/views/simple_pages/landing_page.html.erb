
<div class="container">
  <div class="line-separator"></div>
    <h1 class="featured_post"><span>latest in</span></h1> 
    <div class="row">
      <% @posts.each do |post| %>
      <div class="col-md-6 content-post">
       <!-- <a href="#"><h2><%= post.category.name %></h2></a>
        <h3><%= post.title %></h3>
        <h4>January 1, 2018</h4>
        -->
        <%= image_tag post.image.url(:large) %>
        <div class="content-title">
          <div class="inner">
            <div class="category">
             <h2 class="category-type"><a href="#"><%= post.category.name %></a><h2>
            </div>
             <h3 class="title"><%= post.title %></h3>
             <div class="exerpt"><%= post.content %><br>
               <button class="btn read-more white-btn"><%= link_to 'read more', post %></button>
             </div>
          </div>
        </div>
        
        <p><% post.content %> <% link_to 'read more', post %></p></div>
      
      <% end %><!-- post loop -->
    </div><!-- end row -->
</div><!-- end Container -->


